    <script>

        function GetTime() {
            var time = new Date();
            var hr = time.getHours();
            var min = time.getMinutes();
            //var day = time.getDay(time.getDate());
            //var dayn = time.toLocaleString("default", { weekday: "long" })

            if (hr <= 12) {
                if (min < 10) {
                    document.getElementById('datetime').innerText = hr + " : " + "0" + min + " " + "AM";
                } else {
                    document.getElementById('datetime').innerText = hr + " : " + min + " " + "AM";
                }
                //window.alert('Good Morning !');
            } else {
                if (min < 10) {
                    document.getElementById('datetime').innerText = hr + " : " + "0" + min + " " + "PM";
                } else {
                    document.getElementById('datetime').innerText = hr + " : " + min + " " + "PM";
                }

                //window.alert('Good Afternoon !')
            }


        }
        function Days() {
            var t = new Date();
            var day = t.getUTCDate();
            var dayn = t.toLocaleString("default", { weekday: "long" })
            //alert(day);
            document.getElementById('n1').innerText = day;
            document.getElementById('dn').innerText = dayn;
        }

        window.addEventListener('load', GetTime, false);
        window.addEventListener('load', Days, false);
        setInterval(GetTime, 1000)

    </script>
